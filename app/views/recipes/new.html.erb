<%= form_for @recipe do |f| %>
    <%= f.label  :title %>
    <%= f.text_field :title %>

    <%= f.fields_for :ingredients do |ingredient| %>
        Ingredient: <%= ingredient.text_field :name %>
        Quantity: <%= ingredient.text_field :quantity %>
    <% end %>

    <%= link_to 'add new ingredient', @recipe %>

    <%= f.submit %>
<% end %>
